<Window
    x:Class="TeleportTrainer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TeleportTrainer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TeleportTrainer"
    Width="400"
    Height="150"
    Icon="Resources/YLTPTrainer.ico"
    SizeToContent="WidthAndHeight"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Label Content="X:" />
            <TextBox
                Width="Auto"
                Height="20"
                MinWidth="70"
                Text="{Binding Slot1.XPos, UpdateSourceTrigger=PropertyChanged}" />
            <Label Content="Y:" />
            <TextBox
                Width="Auto"
                Height="20"
                MinWidth="70"
                Text="{Binding Slot1.YPos, UpdateSourceTrigger=PropertyChanged}" />
            <Label Content="Z:" />
            <TextBox
                Width="Auto"
                Height="20"
                MinWidth="70"
                Text="{Binding Slot1.ZPos, UpdateSourceTrigger=PropertyChanged}" />
            <Button
                Width="50"
                Height="20"
                Margin="5,0,0,0"
                Click="Button_Click"
                Content="GO" />
        </StackPanel>
        <StackPanel Grid.Row="1">
            <TextBlock
                HorizontalAlignment="Left"
                Text="Use Num1/LB to save position and Num3/RB to teleport to position"
                TextWrapping="Wrap" />
        </StackPanel>

    </Grid>
</Window>
